<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- <data noupdate="1"> -->
    <data>


        <record id="email_template_workshop" model="mail.template">
            <field name="name">Workshop: Send by email</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="subject">${object.name or 'n/a' }</field>
            <field name="email_from">${(object.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Hello,
        <br/><br/>
        Please find report of the workshop <strong>${object.workshop_subject}</strong> that took place on ${object.workshop_location} at ${object.workshop_date}.
        <br/><br/>
        The following were present :
        <br/>
        <ul>
        % for attendee in object.attendee_ids:
            <li>
                <span style="margin-left:5px">${attendee.name}, ${attendee.parent_name}
                % if attendee.function :
                 - ${attendee.function or ''}
                % endif
                </span>
            </li>
        % endfor
        </ul>


        <br/><br/>
        Do not hesitate to contact us if you have any questions.
        <br/>
    </p>
${object.workshop_content}
</div>
            </field>
            <!-- <field name="report_template" ref="action_report_saleorder"/> -->
            <!-- <field name="report_name">${(object.name or '').replace('/','_')}</field> -->
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>


    </data>
</odoo>
